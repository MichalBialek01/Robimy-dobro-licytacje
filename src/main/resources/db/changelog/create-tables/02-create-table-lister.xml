<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
                   logicalFilePath="db/changelog/create-tables/02-create-table-lister.xml">

    <changeSet id="02-create-table-lister" author="michal.bialek">
        <createTable tableName="lister">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="firstName" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="lastName" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(32)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>