<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
                   logicalFilePath="db/changelog/create-tables/05-create-table-auction-participant.xml">

    <changeSet id="05-create-table-auction-participant" author="michal.bialek">
        <createTable tableName="bid">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="bid_value" type="NUMERIC(6,2)">
                <constraints nullable="false"/>
            </column>
            <column name="bid_date_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="auction_id" type="BIGINT"/>
            <column name="participant_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="bid" baseColumnNames="auction_id"
                                 constraintName="fk_bid_auction"
                                 referencedTableName="auction" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="bid" baseColumnNames="participant_id"
                                 constraintName="fk_bid_participant"
                                 referencedTableName="participant" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>